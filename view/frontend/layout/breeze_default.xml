<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="breeze.js">
            <arguments>
                <argument name="better_compatibility" xsi:type="array">
                    <item name="Firebear_Configurableproducts" xsi:type="boolean">false</item>
                </argument>
                <argument name="bundles" xsi:type="array">
                    <item name="product-configurable" xsi:type="array">
                        <item name="items" xsi:type="array">
                            <item name="icpAbstract" xsi:type="array">
                                <item name="path" xsi:type="string">Swissup_BreezeFirebearConfigurableproducts/js/icp.abstract</item>
                                <item name="autoload" xsi:type="array">
                                    <item name="onRequire" xsi:type="boolean">true</item>
                                </item>
                            </item>
                            <item name="firebear-configurable-mixin" xsi:type="array">
                                <item name="path" xsi:type="string">Swissup_BreezeFirebearConfigurableproducts/js/configurable-mixin</item>
                                <item name="import" xsi:type="array">
                                    <item name="icpAbstract" xsi:type="string">icpAbstract</item>
                                </item>
                                <item name="mixins" xsi:type="array">
                                    <item name="configurable" xsi:type="string">configurable</item>
                                </item>
                                <item name="load" xsi:type="array">
                                    <item name="onRequire" xsi:type="boolean">true</item>
                                </item>
                            </item>
                            <item name="firebear-swatch-renderer-mixin" xsi:type="array">
                                <item name="path" xsi:type="string">Swissup_BreezeFirebearConfigurableproducts/js/swatch-renderer-mixin</item>
                                <item name="import" xsi:type="array">
                                    <item name="icpAbstract" xsi:type="string">icpAbstract</item>
                                </item>
                                <item name="mixins" xsi:type="array">
                                    <item name="swatch-renderer" xsi:type="string">Magento_Swatches/js/swatch-renderer</item>
                                </item>
                                <item name="load" xsi:type="array">
                                    <item name="onRequire" xsi:type="boolean">true</item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
